{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2018",
        "rootDir": "src/",
        "outDir": "dist/",
        "newLine": "LF",
        "importHelpers": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "experimentalDecorators": true
    },
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        "./node_modules/*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
