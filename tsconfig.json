{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "declaration": true,
        "lib": [
            "ES2017",
            "DOM"
        ]
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "./test/*",
        "./node_modules/*"
    ]
}
